package com.converter.service;

import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.consumer.model.Employee;
import com.converter.model.Currency;

@Service
public class CurrencyService {

	RestTemplate  template;
	
	public ResponseEntity searchEmployeeById(int sid)
	{
		String url="http://localhost:8080/employee/"+sid;
		ResponseEntity entity=template.getForEntity(url, Currency.class);
		Currency  s=(Currency) entity.getBody();
		System.out.println("The Employee details"+s);
		return entity;
	}
}
